<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_relative_layout">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/purple_200"
        android:text="gravity = start"
        android:textSize="20dp"
        android:gravity="start"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_below="@id/tv1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        android:text="gravity = center"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_below="@id/tv2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:gravity="center_horizontal"
        android:text="gravity = center horizontal"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@id/tv3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/teal_700"
        android:gravity="end"
        android:text="gravity = end"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tv5"
        android:layout_below="@id/tv4"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/purple_200"
        android:gravity="end"
        android:text="layout gravity = start"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv5"
        android:layout_centerInParent="true"
        android:background="@color/teal_200"
        android:gravity="end"
        android:text="layout gravity = center"
        android:textSize="20dp" />
    <TextView

        android:layout_below="@id/tv6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:gravity="end"
        android:text="layout gravity = end"
        android:textSize="20dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>